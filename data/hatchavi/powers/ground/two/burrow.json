        "conditions": [
            {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:on_block"
                    },
                    {
                        "type": "origins:sneaking"
                    }
                ]
            },
            {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:swimming"
                    },
                    {
                        "type": "origins:sneaking"
                    }
                ]
            }
        ]
    }
    },
    "swim": {
		"type": "origins:swimming",
		"condition": {
            "type": "origins:in_block",
            "block_condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:in_tag",
                        "tag": "hatchavi:dig2notrans"
                    }
                ]
            }
        }
    },
    "regen": {
        "type": "origins:disable_regen",
        "condition": {
            "type": "origins:in_block",
            "block_condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:in_tag",
                        "tag": "hatchavi:dig2"
                    }
                ]
            }
        }
    },
    "exhaust": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:exhaust",
            "amount": 0.2
        },
        "interval": 20,
        "condition": {
            "type": "origins:in_block",
            "block_condition": {
                "type": "origins:and",
