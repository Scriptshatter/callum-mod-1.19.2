            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle",
                    "inverted": true
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": ">=",
                    "compare_to": 1
