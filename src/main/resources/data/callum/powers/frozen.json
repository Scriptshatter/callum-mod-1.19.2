                },
                {
                    "type": "origins:revoke_power",
                    "power": "*:*",
                    "source": "apoli:command"
                }
            ]
        }
    },
    "activte_power": {
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle",
                    "inverted": true
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
